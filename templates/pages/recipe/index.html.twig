{% extends 'base.html.twig' %}

{% block title %}SuperMadeleine - Mes recettes
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {%  if not recipes.items is same as ([]) %}
                <h1> Mes recettes </h1>

                <a href="{{ path('recipe.new') }}" class="btn btn-success">
                    Cr√©er une recette
                </a>

                <div class="count mt-4">
                    <h5>  Il y a {{ recipes.getTotalItemCount }} recettes au total. </h5>
                </div>

                <table class="table table-hover mt-4">
                    <thead>
                        <tr>
                        <th scope="col">Num√©ro</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Difficult√©</th>
                        <th scope="col">Date de cr√©ation</th>
                        <th scope="col">Edition</th>
                        <th scope="col">Suppression</th>
                        </tr>
                    </thead>
                    <tbody>
                    {# voici comment faire des commentaires en Twig üçïüçï#}
                            {% for recipe in recipes %}
                                    <tr class="table-active">
                                    <th scope="row">{{ recipe.id }}</th>
                                    <td>{{ recipe.name }} </td>
                                    <td>{{ recipe.price is null ? 'Non renseign√©' : recipe.price }}</td>
                                    <td>{{ recipe.difficulty is null ? 'Non renseign√©' : recipe.difficulty }}</td>
                                    <td>{{ recipe.createdAt|date("d/m/Y") }}</td>
                                    <td>
                                        Todo
                                    </td>
                                    <td>
                                        Todo
                                    </td>
                                    </tr>
                            {% endfor %}

                    </tbody>
            </table>

            <div class="navigation d-flex justify-content-center mt-4">>
                {{ knp_pagination_render(recipes) }}
            </div>
        {% else %}
            <h4> Il n'y a pas de recettes </h4>
        {% endif %}
     </div>    
{% endblock %}
